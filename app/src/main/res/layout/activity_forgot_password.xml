<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <ImageView
        android:id="@+id/img3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/respass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        ></ImageView>

    <TextView
        android:id="@+id/tvResPass"
        android:layout_below="@id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="7pt"
        android:fontFamily="@font/gothicb"
        android:textColor="@color/tosca"
        ></TextView>

    <EditText
        android:id="@+id/edtRessPassNew"
        android:layout_below="@id/tvResPass"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:maxLength="50"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_rounded"
        ></EditText>

    <Button
        android:id="@+id/btResetPass"
        android:layout_below="@id/edtRessPassNew"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="Reset Password"
        android:fontFamily="@font/gothicb"
        android:textColor="@color/putih"
        android:background="@drawable/btn_rounded"></Button>



</RelativeLayout>